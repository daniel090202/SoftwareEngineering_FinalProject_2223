@model PaginatedList<Product>

<table style="width:100%" id="myTable">
    <tr>
        <th>CODE</th>
        <th>NAME</th>
        <th>PRICE</th>
        <th>TAX</th>
        <th>UNIT</th>
        <th>MANUFACTURER' COMPANY</th>
        <th>CATEGORY</th>
        <th>CONSIGNMENT'S CODE</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.Tax</td>
            <td>@product.Unit</td>
            <td>@product.Manufacturer_Id</td>
            <td>@product.Category_Id</td>
            <td>@product.Consignment_Id</td>
            <td><a href="/Product/Detail/@product.Id" class="btn btn-default">View</a></td>
        </tr>
    }
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";

}

<div class="row">
    <div class="col-lg-4"></div>
    <div class="col-lg-2">
        <a href="/Customer/Index/@(Model.PageIndex - 1)" class="btn btn-default @prevDisabled">PREVIOUS</a>
    </div>
    <div class="col-lg-2">
        <a href="/Customer/Index/@(Model.PageIndex + 1)" class="btn btn-default @nextDisabled">NEXT</a>
    </div>
    <div class="col-lg-4"></div>
</div>

<div class="row">
    <div class="col-lg-9"></div>
    <div class="col-lg-3">
        <a href="/Customer/Cart" class="btn btn-success">View cart</a>
    </div>
</div>

